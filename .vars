export MANPAGER="less -X"
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:ls *:cd:cd -:pwd;exit:date:* --help"
export HISTFILE=~/.history
export LC_CTYPE=en_US.UTF-8

export JAVA_OPTS="-Xmx2048m -Xms2048m"
export GRADLE_OPTS="-Xmx2048m -XX:MaxPermSize=512m -XX:+UseConcMarkSweepGC -Dcom.sun.management.jmxremote -Dorg.gradle.daemon=true"
export MAVEN_OPTS="-Xmx2048m -Xms2048m -Dsurefire.useFile=false"
SBT_OPTS="-XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=512M"

export EDITOR=vim
export SVN_EDITOR=vim

export JRUBY_OPTS="--1.9"

